#!/bin/zsh

pidof pycharm;

if [[ $? -ne 0 ]]; then
	exit;
fi

file=$(echo "$1" | sed -E 's/.*file=([^&]+).*/\1/');
line=$(echo "$1" | sed -E 's/.*line=([^&]+).*/\1/');

if [[ -z "file" ]]; then
	exit;
fi

if [[ "$line" == "$1" ]]; then
	line="1";
fi

$HOME/.local/binaries/pycharm-community/bin/pycharm --line "$line" "$file"
