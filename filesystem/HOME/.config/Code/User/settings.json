{
    "files.autoSave": "afterDelay",
    "editor.codeActions.triggerOnFocusChange": true,
    "editor.fontFamily": "'Fira Code Retina', 'monospace', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 18,
    "workbench.editor.enablePreview": false,
    "editor.renderWhitespace": "none",
    "editor.trimAutoWhitespace": false,
    "files.insertFinalNewline": true,
    "editor.renderFinalNewline": "on",
    "editor.scrollBeyondLastLine": false,
    "workbench.startupEditor": "none",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "terminal.integrated.defaultProfile.linux": "bash",
    "inlineChat.accessibleDiffView": "off",
    "terminal.integrated.initialHint": false,
    "workbench.secondarySideBar.defaultVisibility": "hidden",
    "editor.insertSpaces": true,
    "editor.useTabStops": false,
    "sonarlint.disableTelemetry": true,
    "raspberry-pi-pico.python3Path": "/bin/python",
    "sonarlint.rules": {},
    "editor.tabSize": 4,
    "editor.indentSize": 4,
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "tinymist.formatterIndentSize": 4,
    "tinymist.exportPdf": "onSave",
    "tinymist.lint.enabled": true,
    "tinymist.lint.when": "onSave",
    "tinymist.preview.scrollSync": "onSelectionChange",
    "[typst]": {
        "editor.tabSize": 4,
        "editor.indentSize": 4,
        "editor.formatOnType": true,
        "editor.formatOnSave": true,
    },
    "github.copilot.enable": { "*": false },
    "github.copilot.editor.enableAutoCompletions": false,
    "github.copilot.editor.enableCodeActions": false,
    "github.copilot.nextEditSuggestions.enabled": false,
    "github.copilot.renameSuggestions.triggerAutomatically": false,
    "chat.commandCenter.enabled": false,
    "chat.agent.enabled": false,
    "chat.disableAIFeatures": true,
    "settingsSync.ignoredSettings": [
        "editor.fontSize"
    ],
    "workbench.colorTheme": "Dark Orange Default"
}
