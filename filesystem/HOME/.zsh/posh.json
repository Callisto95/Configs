{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "upgrade": {
    "notice": true,
    "interval": "24h",
    "auto": false,
    "source": "cdn"
  },
  "transient_prompt": {
      "background": "transparent",
      "foreground": "#00FF00",
      "template": "\uF054 "
  },
  "final_space": true,
  "version": 3,
  "accent_color": "#FF4500",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "path",
          "style": "diamond",
          "trailing_diamond": "\uE0B0",
          "foreground": "#FF4500",
          "background": "#333333",
          "properties": {
            "type": "path",
            "style": "full"
          }
        },
        {
          "type": "path",
          "style": "diamond",
          "trailing_diamond": "\uE0B0",
          "foreground": "#FF0000",
          "background": "#000000",
          "properties": {
            "type": "path",
            "style": "full"
          },
          "template": "{{ if .Writable }}{{ else }} \uF023{{ end }}"
        },
        {
          "background": "#4e9a06",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#c4a000{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#f26d50{{ end }}",
            "{{ if gt .Ahead 0 }}#89d1dc{{ end }}",
            "{{ if gt .Behind 0 }}#4e9a06{{ end }}"
          ],
          "foreground": "#000000",
          "trailing_diamond": "\uE0B0",
          "properties": {
          "branch_icon": " ",
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "style": "diamond",
          "template": "{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "type": "git"
        }
      ]
    },
    {
      "type": "rprompt",
      "segments": [
        {
          "background": "#689f63",
          "foreground": "#ffffff",
          "invert_powerline": true,
          "powerline_symbol": "\ue0b2",
          "properties": {
            "fetch_version": true
          },
          "style": "powerline",
          "template": " {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{ .Full }} \ue718 ",
          "type": "node"
        },
        {
          "background": "#4B8BBE",
          "foreground": "#FFD43B",
          "invert_powerline": true,
          "powerline_symbol": "\ue0b2",
          "properties": {
            "display_mode": "files",
            "fetch_virtual_env": false
          },
          "style": "powerline",
          "template": " {{ if .Error }}{{ .Error }}{{ else }}{{ .Full }}{{ end }} ",
          "type": "python"
        },
        {
          "background": "#ffff66",
          "foreground": "#111111",
          "invert_powerline": true,
          "powerline_symbol": "\ue0b2",
          "style": "powerline",
          "template": " \uf0ad ",
          "type": "root"
        },
        {
          "background": "#333333",
          "foreground": "#FF4500",
          "invert_powerline": true,
          "powerline_symbol": "\ue0b2",
          "style": "powerline",
          "template": " {{ .FormattedMs }} ",
          "type": "executiontime",
          "properties": {
              "always_enabled": true
          }
        },
        {
          "background": "#000000",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#FF0000{{ end }}"
          ],
          "foreground": "#00FF00",
          "invert_powerline": true,
          "properties": {
            "always_enabled": true
          },
          "style": "diamond",
          "template": " {{ if gt .Code 0 }}\uF00D {{ .Code }}{{ else }}\uF00C{{ end }} ",
          "type": "status"
        }
      ]
    }
  ]
}
